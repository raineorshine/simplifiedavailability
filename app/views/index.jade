doctype html
html(lang='en' ng-app='simpleAvail')
	head
		meta(charset='utf-8')
		title Simplified Availability
		link(href='//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css', rel='stylesheet')
		link(href='//cdn.jsdelivr.net/flat-ui/2.0/css/flat-ui.css', rel='stylesheet')
		script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.3.0-beta.15/angular.min.js')
		script(src='/scripts/lib/controllers.js')

	body(ng-controller='TestCtrl')
		.jumbotron
			input(type='text' ng-model='name' placeholder='Enter a name here')
			h1 Hello {{name}}
			button.btn.btn-primary Go, now!

		script(src='//code.jquery.com/jquery-2.1.1.min.js')
		script(src='//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js')
