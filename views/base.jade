	body
		header
			h1.logo Simplified Availability

			if calendarPage
				.center
					h2.title Calendar Title
			
			.right
				if calendarPage
					a(href='#') My Availability
					select
						optgroup(label='Time zone')
							//- should default to user's time zone
							option(value='pst') Pacific Time
				else
					.toggle
						checkbox.toggle-value(checked)
						span.pub-priv Public
							span.url http://example.com
						span.pub-priv Private
				a(href='#') Settings


